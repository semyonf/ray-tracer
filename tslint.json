{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": {
      "severity": "warning",
      "options": [
        80
      ]
    },
    "new-parens": true,
    "quotemark": [
      true,
      "single"
    ],
    "member-access": true,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}
